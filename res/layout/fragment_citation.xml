<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CitationActivity$DummySectionFragment" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/citationButtonStroke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:ignore="UselessParent" >

        <Button
            android:id="@+id/state_button"
            style="@style/citation_button"
            android:onClick="showDialog"
            android:tag="@string/state_button"
            android:padding="1dp"
            android:text="@string/state_button" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
        android:background="@color/citationButtonStroke" />

        <Button
            android:id="@+id/plate_button"
            style="@style/citation_button"
            android:padding="1dp"
            android:text="@string/plate_button"
            android:onClick="showDialog"
            android:tag="@string/plate_button" />
        
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/citationButtonStroke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:ignore="UselessParent" >

        <Button
            android:id="@+id/permit_button"
            style="@style/citation_button"
            android:text="@string/permit_button" 
            android:onClick="showDialog"
            android:tag="@string/permit_button" />
        
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/citationButtonStroke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:ignore="UselessParent" >

        <Button
            android:id="@+id/veh_make_button"
            style="@style/citation_button"
            android:text="@string/veh_make_button" 
            android:onClick="showDialog"
            android:tag="@string/veh_make_button" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
	        android:background="@color/citationButtonStroke" />

        <Button
            android:id="@+id/veh_color_button"
            style="@style/citation_button"
            android:text="@string/veh_color_button" 
            android:onClick="showDialog"
            android:tag="@string/veh_color_button" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
	        android:background="@color/citationButtonStroke" />

        <Button
            android:id="@+id/veh_type_button"
            style="@style/citation_button"
            android:text="@string/veh_type_button" 
            android:onClick="showDialog"
            android:tag="@string/veh_type_button" />
        
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/citationButtonStroke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:ignore="UselessParent" >

        <Button
            android:id="@+id/violtn_location_button"
            style="@style/citation_button"
            android:text="@string/violtn_loctn_button" 
            android:onClick="showDialog"
            android:tag="@string/violtn_loctn_button" />
        
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/citationButtonStroke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:ignore="UselessParent" >

        <Button
            android:id="@+id/violtn_code_button"
            style="@style/citation_button"
            android:text="@string/violtn_code_button" 
            android:onClick="showDialog"
            android:tag="@string/violtn_code_button" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
	        android:background="@color/citationButtonStroke" />

        <Button
            android:id="@+id/fine_button"
            style="@style/citation_button"
            android:text="@string/fine_button" 
            android:onClick="showDialog"
            android:tag="@string/fine_button" />
        
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/citationButtonStroke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:ignore="UselessParent" >

        <Button
            android:id="@+id/pub_comments_button"
            style="@style/citation_button"
            android:text="@string/pub_comments_button" 
            android:onClick="showDialog"
            android:tag="@string/pub_comments_button" />
        
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/citationButtonStroke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:ignore="UselessParent" >

        <Button
            android:id="@+id/pri_comments_button"
            style="@style/citation_button"
            android:text="@string/pri_comments_button" 
            android:onClick="showDialog"
            android:tag="@string/pri_comments_button" />
        
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/citationButtonStroke" />

</LinearLayout>